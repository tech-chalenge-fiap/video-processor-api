{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "sourceMap": true,
    "declarationDir": "./dist/@types",
    "declaration": true,
    "rootDirs": [
      "src",
      "worker"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "express"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.css",
    "src",
    "worker",
    "worker/**/*.ts",
    "tests/features/stepsDefinitions/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}